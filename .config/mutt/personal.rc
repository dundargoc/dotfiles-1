set folder    = "imaps://mail.gandi.net"
set spoolfile = "+Inbox"
set postponed = "+Drafts"
set record    = "+Sent"
set mbox      = "+Archive"
set trash     = "+Trash"

mailboxes +Inbox
mailboxes +Sent
mailboxes +Archive
mailboxes +Drafts
mailboxes +Lists
mailboxes +Trash

set imap_user = "greg@gpanders.com"
set imap_pass = "`security find-internet-password -s mail.gandi.net -a greg@gpanders.com -r imap -w`"
set from = "greg@gpanders.com"
set query_command = "khard email --parsable --search-in-source-files '%s'"
set hostname = "gpanders.com"

alternates @gpanders\\.com$

set alias_file = ~/.local/share/mutt/aliases
source $alias_file
